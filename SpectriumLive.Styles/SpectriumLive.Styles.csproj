<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ImplicitUsings>enable</ImplicitUsings>
  
	<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Spectrium.Styles</PackageId>
    <Version>1.0.0</Version>
    <Authors>Dudziak07</Authors>
    <Description>Set of reusable WPF styles for Spectrium applications.</Description>
    <RepositoryUrl>https://github.com/Dudziak07/SpectriumLive.Styles</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <None Include=".github\workflows\publish.yml" />
  </ItemGroup>

</Project>
