<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="PrimaryForegroundColor" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="BorderColor" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="AccentColor" Color="#C90094"/>
    <SolidColorBrush x:Key="Disabled.ForegroundColor" Color="#A0A0A0"/>
    <SolidColorBrush x:Key="Disabled.BackgroundColor" Color="#E0E0E0"/>

    <!-- Button -->
    <SolidColorBrush x:Key="Button.Static.Background" Color="#E1E1E1"/>
    <SolidColorBrush x:Key="Button.Static.Border" Color="#ADADAD"/>
    <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#BEE6FD"/>
    <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#3C7FB1"/>
    <SolidColorBrush x:Key="Button.Pressed.Background" Color="#A4D8F9"/>
    <SolidColorBrush x:Key="Button.Pressed.Border" Color="#2C628B"/>
    <SolidColorBrush x:Key="Button.Foreground" Color="#1E1E1E"/>

    <!-- GroupBox -->
    <SolidColorBrush x:Key="GroupBox.Border" Color="#D0D0D0"/>
    <SolidColorBrush x:Key="GroupBox.Header.Foreground" Color="#1E1E1E"/>

    <!-- MenuItem -->
    <SolidColorBrush x:Key="MenuItem.Static.Background" Color="#E1E1E1"/>
    <SolidColorBrush x:Key="MenuItem.Static.Border" Color="#ADADAD"/>
    <SolidColorBrush x:Key="MenuItem.MouseOver.Background" Color="#BEE6FD"/>
    <SolidColorBrush x:Key="MenuItem.MouseOver.Border" Color="#3C7FB1"/>
    <SolidColorBrush x:Key="MenuItem.Pressed.Background" Color="#A4D8F9"/>
    <SolidColorBrush x:Key="MenuItem.Pressed.Border" Color="#2C628B"/>
    <SolidColorBrush x:Key="MenuItem.Foreground" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="MenuItem.Submenu.Border" Color="#D0D0D0"/>

    <!-- TextBox -->
    <SolidColorBrush x:Key="TextBox.Static.Background" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextBox.Static.Border" Color="#ADADAD"/>
    <SolidColorBrush x:Key="TextBox.Static.Foreground" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="TextBox.MouseOver.Border" Color="#7EB4DD"/>
    <SolidColorBrush x:Key="TextBox.Focus.Border" Color="#C90094"/>
    <SolidColorBrush x:Key="TextBox.Caret" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="TextBox.Selection" Color="#40C90094"/>

    <!-- TextBlock -->
    <SolidColorBrush x:Key="TextBlock.Foreground" Color="#1E1E1E"/>
    
    <!-- Slider -->
    <SolidColorBrush x:Key="Slider.Track.Background" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="Slider.SelectionRange.Background" Color="#C90094"/>
    <SolidColorBrush x:Key="Slider.Thumb.Static.Background" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="Slider.Thumb.Static.Border" Color="#ADADAD"/>
    <SolidColorBrush x:Key="Slider.Thumb.MouseOver.Background" Color="#BEE6FD"/>
    <SolidColorBrush x:Key="Slider.Thumb.Pressed.Background" Color="#A4D8F9"/>
    <SolidColorBrush x:Key="Slider.Thumb.Disabled.Background" Color="#A0A0A0"/>
    <SolidColorBrush x:Key="Slider.Tick.Fill" Color="#808080"/>

    <!-- ComboBox -->
    <SolidColorBrush x:Key="ComboBox.Static.Background" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ComboBox.Static.Border" Color="#ADADAD"/>
    <SolidColorBrush x:Key="ComboBox.Static.Foreground" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="ComboBox.MouseOver.Border" Color="#7EB4DD"/>
    <SolidColorBrush x:Key="ComboBox.Pressed.Border" Color="#C90094"/>
    <SolidColorBrush x:Key="ComboBox.Arrow.Static.Fill" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="ComboBox.Popup.Background" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ComboBox.Popup.Border" Color="#D0D0D0"/>

    <!-- ComboBoxItem -->
    <SolidColorBrush x:Key="ComboBoxItem.MouseOver.Background" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="ComboBoxItem.Selected.Background" Color="#C90094"/>
    <SolidColorBrush x:Key="ComboBoxItem.Selected.Foreground" Color="#FFFFFF"/>

</ResourceDictionary>